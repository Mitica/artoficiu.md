.sp-price
  h3= __('price')
    | :  
    em.sp-price_price.js-sp-price(data-value=util.formatNumber(product.price, culture.language, 2))= util.formatNumber(product.price, culture.language, 2)
    em= ' '+__('lei')
  .sp-price_tva= __('inclusive_tva')
    | :  
    span.js-sp-tva(data-value=util.formatNumber(product.price/config.TVA, culture.language, 1))= util.formatNumber(product.price/config.TVA, culture.language, 1)
    | 
    = __('lei')
  if (product.oldPrice)
    h5.sp-price_oldPrice= __('old_price')
      | :  
      em.sp-price_oldPrice.js-sp-old-price= util.formatNumber(product.oldPrice, culture.language, 2)
      | 
      = __('lei')