mixin shopPager(collection, sortParam)
  - var currentPage = collection.skip / collection.limit
  - var totalPages = parseInt((collection.total / collection.limit).toString()) + (collection.total % collection.limit > 0 ? 1: 0)
  - var page = 0
  if (totalPages > 1)
    .c-pager
      while page < totalPages
        a.c-pager_a(href=page > 0 ? links.shop({page:page,sort:sortParam}): links.shop({sort:sortParam}), class=currentPage===page?'selected':null, title=page)= ++page

