
mixin productListBlock(items, options)
  - options = options || { }
  - itemClass = options.itemClass || 'col-3'
  .row.c-prod-bl
    each item, index in items
      .c-prod-bl_item(class=itemClass)
        a.c-prod-bl_i(href=links.catalog.item(item.slug))
          .c-prod-bl_img
            img.c-prod-bl_pic(src=item.images[0].url+'?h=200', alt=item.title)
          .c-prod-bl_priceline
            if (item.oldPrice)
              del.c-prod-bl_oldPrice= util.formatNumber(item.oldPrice, culture.language,  2)
            span.c-prod-bl_price= util.formatNumber(item.price, culture.language, 2)
              |  
              = __('lei')
          h6.c-prod-bl_title= item.title