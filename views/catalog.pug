extends ./layouts/layout

block main_content
  .page-title
    h2.page-title_h2
      if (selectedShopCategory)
        a(href=links.catalog())= __('catalog')
        |  / 
        = (selectedShopCategory.name || selectedShopCategory.title)
      else
        = __('catalog')

  .c-catalog-menu_inline.d-lg-none
    include ./includes/catalog-categories
  +productListBlock(shopProducts.items, {itemClass: 'col-6 col-md-3'})
  if (selectedShopCategory)
    +catalogCategoryPager(shopProducts, selectedShopCategory)
  else
    +catalogPager(shopProducts)