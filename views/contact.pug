extends ./layouts/layout

block main_content
  .page-title
    h2.page-title_h2= __('contact')
    .u-content-box
      iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2718.9556260936774!2d28.809821615411924!3d47.041101534863586!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40c97dbddbe7458f%3A0x1cd57d5516830275!2sStrada+Bucuriei%2C+Chi%C8%99in%C4%83u%2C+Moldova!5e0!3m2!1sro!2s!4v1517329068906", width="100%", height="300", frameborder="0", style="border:0", allowfullscreen)
  .row
    .col-md-4
      .c-group
        h3.c-group_title= __('our_address')
        .c-group_content
          p= __('address_info')
            |  
            = __('address_info_details')
          h6= __('tel')
            |  
            strong.text-primary= config.telephones.join('; ')
    .col-md-4
      .c-group
        h3.c-group_title= __('contact_program_title')
        .c-group_content
          p= __('contact_program')
          h6= __('email')
            |  
            strong.text-primary= config.email
    .col-md-4
      .c-group
        h3.c-group_title= __('contact_contact_us_title')
        .c-group_content
          p= __('contact_contact_us')
