{
  "name": "artoficiu.md",
  "version": "0.1.3",
  "private": true,
  "description": "artoficiu.md",
  "main": "./lib/index.js",
  "watch": {
    "start": {
      "patterns": [
        "lib",
        "views",
        "locales"
      ],
      "extensions": "js,json",
      "quiet": true,
      "legacyWatch": true,
      "delay": 2000
    }
  },
  "scripts": {
    "start": "node ./lib/app.js",
    "dev": "tsc && node ./lib/app.js",
    "build": "gulp prod && yarn run tsc",
    "pretest": "yarn run clean && yarn run tsc",
    "test": "ava --no-cache --verbose  ./lib/*.test.js ./lib/**/*.test.js",
    "posttest": "yarn run clean-test-code",
    "tsc": "tsc",
    "tscw": "tsc -w",
    "preversion": "yarn run tsc",
    "postversion": "git push --follow-tags",
    "prepublish": "yarn run tsc && yarn run clean-test-code",
    "clean": "rimraf ./lib",
    "clean-test-code": "rimraf ./lib/**/*.test.js && rimraf ./lib/*.test.js",
    "create-content-types": "node ./scripts/createContentTypes.js",
    "download-old-data": "node ./scripts/import/downloader.js",
    "import-old-data": "node ./scripts/import/importer.js",
    "gen-narbutas": "tsc && node ./lib/scripts/narbutas/generate.js",
    "watch": "npm-watch start"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mitica/artoficiu.md.git"
  },
  "keywords": [
    "artoficiu",
    "artoficiu.md"
  ],
  "author": "Dumitru Cantea",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mitica/artoficiu.md/issues"
  },
  "homepage": "https://github.com/Mitica/artoficiu.md",
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.2",
    "bootstrap": "^4.1.3",
    "contentful": "^5.0.5",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "gulp-concat": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "html-pdf": "^2.2.0",
    "i18n": "^0.8.3",
    "joi": "^13.1.2",
    "lightbox2": "^2.10.0",
    "lru-cache": "^4.1.2",
    "marked": "^0.3.12",
    "moment-timezone": "^0.5.14",
    "ms": "^2.1.1",
    "node-fetch": "^2.1.2",
    "nodemailer": "^4.4.2",
    "object-hash": "^1.2.0",
    "ournet.logger": "^0.1.0",
    "pug": "^2.0.0-rc.4",
    "sticky-sidebar": "^3.3.1",
    "turndown": "^4.0.1",
    "urlset": "^0.6.1",
    "vanilla-lazyload": "8.16",
    "vogels": "^2.2.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.7",
    "@types/express": "^4.11.0",
    "@types/express-session": "^1.15.6",
    "@types/html-pdf": "^2.1.2",
    "@types/i18n": "^0.8.3",
    "@types/lru-cache": "^4.1.0",
    "@types/marked": "^0.3.0",
    "@types/ms": "^0.7.30",
    "@types/node": "^6.x.x",
    "@types/node-fetch": "^1.6.8",
    "@types/nodemailer": "^4.3.2",
    "ava": "^0.23.0",
    "cheerio": "^1.0.0-rc.2",
    "contentful-management": "^4.2.0",
    "debug": "^3.1.0",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.9.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-rev-all": "^0.9.7",
    "gulp-sass": "3.0.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-to-ico": "^1.0.0",
    "npm-watch": "^0.4.0",
    "rimraf": "^2.6.2",
    "slug": "^0.9.1",
    "typescript": "^2.6.2"
  }
}
